<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="购物车" />

    <TextView
        android:id="@+id/tv_goodname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_cart"
        android:layout_centerHorizontal="true"
        android:text="商品:iPhoneX" />

    <Button
        android:id="@+id/bt_goto_gooddetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_goodname"
        android:layout_centerHorizontal="true"
        android:text="跳转到商品详情" />
    <TextView
        android:id="@+id/tv_loginstate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_goto_gooddetail"
        android:layout_centerHorizontal="true"
        android:text="未登录" />

</RelativeLayout>